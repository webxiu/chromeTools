{
  "name": "语音助手",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "18.0.0",
  "description": "划词阅读",
  "permissions": ["tts", "scripting", "activeTab"],
  "icons": {
    "16": "img/icon@16.png",
    "32": "img/icon@32.png",
    "48": "img/icon@48.png",
    "128": "img/icon@128.png"
  },
  "action": {
    "active_icon": "img/icon@48.png",
    "default_icon": "img/icon@48.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
